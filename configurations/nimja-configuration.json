{
  "comments": {
    "blockComment": ["{#", "#}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{#", "#}"],
    ["{%", "%}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"\"\"", "\"\"\""],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "onEnterRules": [
    {
      "beforeText": ">\\s*$",
      "action": { "indent": "indent" }
    }
  ]
}