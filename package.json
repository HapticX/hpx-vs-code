{
  "name": "happyx",
  "displayName": "HappyX",
  "description": "HappyX web framework for Visual Studio Code",
  "version": "2.0.0",
  "publisher": "HapticX",
  "license": "MIT",
  "icon": "logo.png",
  "pricing": "Free",
  "repository": "https://github.com/HapticX/hpx-vs-code",
  "categories": ["Programming Languages"],
  "keywords": ["nim", "happyx", "nimja", "nimble"],
  "engines": {
    "vscode": "^1.79.2"
  },
  "galleryBanner": {
    "color": "#EF7575",
    "theme": "dark"
  },
  "contributes": {
    "iconThemes": [
      {
        "id": "happyx",
        "label": "HappyX",
        "path": "./icons/hpx_icons.json"
      }
    ],
    "languages": [
      {
        "id": "happyx",
        "aliases": ["HappyX", "happyx", "hpx", "nim"],
        "extensions": [".nim",".nims"],
        "configuration": "./configurations/happyx-configuration.json"
      },
      {
        "id": "nimble",
        "aliases": ["Nimble"],
        "extensions": [".nimble"],
        "configuration": "./configurations/nimble-configuration.json"
      },
      {
        "id": "nimja",
        "aliases": ["Nimja", "nimja"],
        "extensions": [".nimja"],
        "configuration": "./configurations/nimja-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "happyx",
        "scopeName": "source.nim",
        "path": "./syntaxes/happyx.tmLanguage.json"
      },
      {
        "language": "nimble",
        "scopeName": "source.nimble",
        "path": "./syntaxes/nimble.tmLanguage.json"
      },
      {
        "language": "nimja",
        "scopeName": "source.nimja",
        "path": "./syntaxes/nimja.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "happyx",
        "path": "./snippets/snippets.json"
      }
    ],
    "activationEvents": [
      "onLanguage:happyx",
      "onLanguage:nimble",
      "onLanguage:nimja"
    ],
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
      "@types/node": "^8.10.25",
      "@types/vscode": "^1.51.0",
      "tslint": "^5.16.0",
      "typescript": "^3.4.5"
    }
  }
}
